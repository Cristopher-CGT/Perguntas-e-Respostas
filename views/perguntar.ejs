<%- include('./partials/header.ejs'); %>
<body>
  <div class="container">
    <div class="card" id="form-quest">
      <div class="card-header">
        <h3>Realizar Pergunta</h3>
      </div>

      <div class="card-body">
        <form method="POST" action="/salvarpergunta">
          <label for="titulo">Título</label>
          <input
            type="text"
            placeholder="Título"
            name="titulo"
            class="form-control"
          />
          <br />
          <label for="descricao">Descrição</label>
          <textarea
            id=""
            cols="30"
            rows="10"
            placeholder="Descreva sua pergunta aqui"
            name="descricao"
            class="form-control"
          ></textarea>
          <br />
          <button class="btn btn-primary">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>
